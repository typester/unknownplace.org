? use DateTime::Format::HTTP;
<?= encoded_string qq[<\?xml version="1.0" encoding="utf-8"?\>] ?>
<rss version="2.0"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:content="http://purl.org/rss/1.0/modules/content/"
     xml:lang="ja">
  <channel>
    <title>unknownplace.org - memo</title>
    <link>http://unknownplace.org/memo/</link>
    <description>just my memo</description>
    <dc:creator>typester</dc:creator>
? for my $entry (splice @{ $page->entries || [] }, 0, 15) {
    <item>
      <title><?= $entry->title ?></title>
      <link>http://unknownplace.org/memo/<?= $entry->datetime->ymd('/') ?>/<?= $entry->filename ?>/</link>
      <description><![CDATA[<?= encoded_string $entry->body ?>]]></description>
      <dc:creator>typester</dc:creator>
      <pubDate><?= DateTime::Format::HTTP->format_datetime($entry->datetime) ?></pubDate>
      <category><?= join(', ', @{ $entry->meta->{tags} || [] }) ?></category>
    </item>
? }
  </channel>
</rss>
